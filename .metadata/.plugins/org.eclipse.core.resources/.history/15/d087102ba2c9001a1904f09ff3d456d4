package com.he.day04;

/**
 * @author hewei
 *
 */
public class Mobile {
    //品牌
    public String brand;
    //价格
    public String price;
    //发短信
    public void sendMessage(String name){
        System.out.println(name+"在家吗，周末出去玩");
    }   
    //返回手机的价格和品牌信息
    public String getMobleInfo(){
        return "手机品牌"+brand+"，手机价格"+price;
    }
    
    
    //无参构造函数，作用：创建一个最原始的对象
    public Mobile(){
        
    }
    
    public Mobile(String brand,int price){
        brand = this.brand;
        
    }
    
    
}
