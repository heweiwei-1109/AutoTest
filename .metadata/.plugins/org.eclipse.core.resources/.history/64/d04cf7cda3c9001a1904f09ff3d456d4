package com.he.day04;

/**
 * @author hewei
 *
 */
public class Mobile {
    //品牌
    public String brand;
    //价格
    public int price;
    //发短信
    public void sendMessage(String name){
        System.out.println(name+"在家吗，周末出去玩");
    }   
    //返回手机的价格和品牌信息
    public String getMobleInfo(){
        return "手机品牌"+this.brand+"，手机价格"+this.price;
    }
    
    
    //无参构造函数，作用：创建一个最原始的对象
    public Mobile(){
        
    }
    
    /**带参构造函数，作用：能够按照我们的意愿来初始化一个对象
     * @param name
     * @param money
     */
    public Mobile(String name,int money){
        this.brand = name;
        this.price = money;
    }
    
    public static void main(String[] args) {
        //通过调用无参构造函数，创建一个原始对象
        Mobile mobile01 = new Mobile();
        //通过调用带参构造函数，创建一个原始对象，品牌：华为，价格：8888
        Mobile mobile02 = new Mobile("华为", 8888);
        
        
    }
    
}
